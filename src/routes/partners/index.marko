          div class="field"
            span 
              --
              E-mail de contato
              --
            div class="control"
              <input class="input" type="text" placeholder="guilherme@kolibri.tech">
          div class="field"
            span
              --
              Nome da Empresa
              --
            div class="control"
              <input class="input" type="text" placeholder="Kolibri Tech">
          div class="field"
            span
              --
              Ramo de Atuação
              --
            div class="control"
              <input class="input" type="text" placeholder="">
          div class="field"
            span
              --
              Breve Descritivo da Demanda
              --
            div class="control"
              <input class="input" type="text" placeholder="">
          div class="control"
            button class="is-primary" 
              span -- Enviar
