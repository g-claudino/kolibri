                      div class = "control"
                        div class = "select is-primary"
                          <select>
                            <option> 1 </option>
                            <option> 2 </option>
                          </select>
                    div class="control"
                      button class="is-primary" 
                        span -- Ver Rotas
              div class = "column"
                card
